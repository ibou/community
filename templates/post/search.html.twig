{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('build/js/search.js') }}"></script> 
{% endblock %}

{% block body_id 'blog_search' %}

{% block main %}
<form action="{{ path('post_search') }}" method="get">
    <div class="form-group">
        <input name="q" class="form-control search-field" placeholder="{{ 'post.search_for'|trans }}" autocomplete="off"
            autofocus data-no-results-message="{{ 'post.search_no_results'|trans }}">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div id="results">
</div>
{% endblock %}

{% block sidebar %}
{{ parent() }}
 
{% endblock %}
