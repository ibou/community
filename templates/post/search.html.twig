{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('build/js/search.js') }}"></script>
{% endblock %}

{% block body_id 'blog_search' %}

{% block main %}
<form action="{{ path('post_search_query') }}" method="get" id="form-search">
    <div class="form-group">
        <input name="q" class="form-control search-field" id="search-field" placeholder="{{ 'post.search_for'|trans }}" autocomplete="off"
            autofocus data-no-results-message="{{ 'post.search_no_results'|trans }}">
    </div>
     <span class="js-count-result">...</span>
</form>

<div id="output">
</div>
{% endblock %}

{% block sidebar %}
{{ parent() }}

{% endblock %}
