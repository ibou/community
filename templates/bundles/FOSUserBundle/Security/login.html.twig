{% extends '@FOSUser/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}


{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('css/login') }}
{% endblock %}
{% block title %}Log in!{% endblock %}

{% block body_id 'login_auth' %}

{% block fos_user_content %}
 
<div class="row">
    {% block main %} 
    <div class="col-sm-8"> 
            <form action="{{ path("fos_user_security_check") }}" method="post"> 

                    {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <h1 class="h3 mb-3 font-weight-normal">{{ 'title.login'|trans }}</h1>
                    <label for="inputEmail" class="sr-only">{{ 'label.username'|trans }}</label>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div> 
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autocomplete="username" />

                    </div>
                    <label for="inputPassword" class="sr-only">{{ 'label.password'|trans }}</label>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                        </div>  
                        <input type="password" class="form-control" id="password-field" name="_password" required="required" autocomplete="current-password" />  
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i toggle="#password-field"
                                    class="fa fa-fw fa-eye field-icon toggle-password"></i></span>
                        </div>
                    </div>
                    <div class="row align-items-center remember">
                        <input type="checkbox" name="_remember_me"> {{ 'action.remember_me'|trans }} 
                    </div>

                    <div class="form-group  float-right">

                        <button type="submit" class="btn  login_btn">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in'|trans }}
                        </button>
                    </div>

                    <div class="form-group">
                        <div class="btn float-left login_btn">
                            <a href="{{ path('fos_user_resetting_request') }}">{{'password.forgotten'|trans}} ?</a>
                        </div>
                    </div> 

        </form>
    </div>
    {% endblock %}

    {% block sidebar %}
    <div class="col-sm-3"> 
        <div class="card">
            <div class="card-header">
                {{ 'new.account.title'|trans }} ?
            </div>
            <div class="card-body">
                <a href="{{path('fos_user_registration_register')}}">
                    {{ 'new.account.create'|trans }}
                </a>
                
            </div> 
        </div>
        {{ parent() }}
    </div>
    {% endblock %}
    {% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/login') }}
    {% endblock %}
    {% endblock %}